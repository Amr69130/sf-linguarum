{% extends 'base.html.twig' %}

{% block title %}
  Bienvenue sur Linguarum
{% endblock %}

{% block body %}
  <div class="min-h-screen bg-cover bg-center px-4 py-12" style="background-image: url('{{ asset('images/bg2.jpg') }}');">
    <h1 class="text-4xl font-extrabold mb-8 text-center text-gray-900 drop-shadow-sm">LINGUARUM</h1>
    <h2 class="text-4xl font-extrabold mb-8 text-center text-gray-900 drop-shadow-sm">Arbre généalogique des langues</h2>

    <p class="text-center text-gray-800 mb-10 text-lg">
      Voici une liste non-exhaustive de quelques langues et leurs familles. <br />
      {% if app.user == null %}
        Inscrivez-vous
        <a class="underline font-semibold text-indigo-700 hover:text-indigo-500" href="{{ path('app_register') }}">ici</a>
        pour en proposer d'autres !
      {% endif %}
    </p>

    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 xl:grid-cols-4 gap-8">
      {% for language in languages %}
        {% if language.parent is null %}
          <div class="bg-white/80 backdrop-blur-sm border border-gray-200 rounded-xl shadow-md p-6">
            <!-- Langue principale -->
            <a href="{{ path('language_details', { id: language.id }) }}" class="block hover:scale-[1.02] transition-transform">
              <h3 class="text-xl font-bold text-gray-800">{{ language.name }}</h3>
              <p class="text-gray-600 text-sm mt-2">{{ language.description }}</p>
            </a>

            {% if (language.children|length) > 0 %}
              <div class="mt-4 pl-4 border-l-4 border-indigo-300 space-y-3">
                {% for child in language.children %}
                  <div>
                    <a href="{{ path('language_details', { id: child.id }) }}" class="block text-gray-700 font-medium hover:underline">↳ {{ child.name }}</a>

                    {% if (child.children|length) > 0 %}
                      <div class="mt-2 ml-4 pl-4 border-l-2 border-indigo-200 space-y-2">
                        {% for grandchild in child.children %}
                          <a href="{{ path('language_details', { id: grandchild.id }) }}" class="block text-gray-600 text-sm hover:underline">↳ {{ grandchild.name }}</a>
                        {% endfor %}
                      </div>
                    {% endif %}
                  </div>
                {% endfor %}
              </div>
            {% endif %}
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>
{% endblock %}
