{% extends 'base.html.twig' %}

{% block title %}
  Bienvenue sur Linguarum
{% endblock %}

{% block body %}
  <div class="min-h-screen bg-gray-100 flex flex-col justify-center items-center p-8">
    <div class="bg-white shadow-xl rounded-2xl p-10 max-w-3xl w-full text-center mb-8">
      <h1 class="text-4xl font-bold text-indigo-600 mb-4">Bienvenue sur <span class="italic">Linguarum</span> üåç</h1>
      <p class="text-gray-600 text-lg">Ce projet vous permet d'explorer l‚Äôarbre g√©n√©alogique des langues du monde.</p>
    </div>

    <h2 class="text-2xl font-bold mb-6">Arbre g√©n√©alogique des langues</h2>
  </div>
  <div class="flex flex-wrap justify-start gap-8 max-h-screen overflow-y-auto">
    {% for language in languages %}
      {% if language.parent is null %}
        <div class="group relative bg-white shadow-lg rounded-2xl w-96 p-6 hover:shadow-2xl transition-transform transform hover:scale-105">
          <div class="absolute top-0 right-0 px-2 py-1 text-xs bg-indigo-600 text-white rounded-full">Langue M√®re</div>
          <h3 class="text-xl font-bold text-indigo-600 mb-4">{{ language.name }}</h3>
          <p class="text-gray-600 text-sm mb-4">{{ language.description }}</p>

          <a href="{{ path('language_details', { id: language.id }) }}" class="absolute bottom-4 left-1/2 transform -translate-x-1/2 text-indigo-500 hover:underline">Voir les d√©tails ‚Üí</a>

          {% if (language.children|length) > 0 %}
            <div class="absolute bottom-0 left-0 right-0 h-1 bg-gradient-to-r from-indigo-300 to-indigo-600"></div>
            <div class="mt-4">
              <h4 class="text-lg font-semibold text-indigo-600">Langues Enfants :</h4>
              <ul class="space-y-2 mt-2">
                {% for child in language.children %}
                  <li class="bg-indigo-50 p-3 rounded-lg shadow-md hover:shadow-xl transition-shadow transform hover:scale-105">
                    <a href="{{ path('language_details', { id: child.id }) }}" class="block text-indigo-600"><strong>{{ child.name }}</strong> - {{ child.description }}</a>
                  </li>

                  {% if (child.children|length) > 0 %}
                    <div class="ml-8 mt-4">
                      <h5 class="text-md font-semibold text-indigo-500">Sous-langues :</h5>
                      <ul class="space-y-2 mt-2">
                        {% for grandchild in child.children %}
                          <li class="bg-indigo-100 p-3 rounded-lg shadow-md hover:shadow-xl transition-shadow transform hover:scale-105">
                            <a href="{{ path('language_details', { id: grandchild.id }) }}" class="block text-indigo-600"><strong>{{ grandchild.name }}</strong> - {{ grandchild.description }}</a>
                          </li>
                        {% endfor %}
                      </ul>
                    </div>
                  {% endif %}
                {% endfor %}
              </ul>
            </div>
          {% endif %}
        </div>
      {% endif %}
    {% endfor %}
  </div>
{% endblock %}
