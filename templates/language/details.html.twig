{% extends 'base.html.twig' %}

{% block title %}
  {{ language.name }} - Détails
{% endblock %}

{% block body %}
  <div class="min-h-screen bg-cover bg-center p-10" style="background-image: url('{{ asset('images/bg2.jpg') }}');">
    <div class="bg-black bg-opacity-60 min-h-screen flex flex-col justify-center items-center p-8">
      <div class="bg-white/10 backdrop-blur-md rounded-xl p-8 max-w-3xl w-full text-center mb-8">
        <h1 class="text-4xl font-bold text-white mb-4">{{ language.name }}</h1>
        <p class="text-gray-200 text-lg mb-6">{{ language.description }}</p>

        {% if language.parent %}
          <p class="text-gray-300">
            Langue Mère : <strong>{{ language.parent.name }}</strong>
          </p>
        {% endif %}

        <h2 class="text-gray-300 mt-6">Langues Filles :</h2>
        {% if (language.children|length) > 0 %}
          <ul class="text-gray-300 list-disc list-inside">
            {% for child in language.children %}
              <li>
                <a href="{{ path('language_details', { id: child.id }) }}" class="underline hover:text-indigo-400">{{ child.name }}</a>
              </li>
            {% endfor %}
          </ul>
        {% else %}
          <p class="text-gray-300 italic">Aucune langue fille</p>
        {% endif %}

        <a href="{{ path('app_home') }}" class="mt-4 inline-block text-indigo-600 hover:text-indigo-800 text-lg">Retour à l'accueil</a>
      </div>
    </div>
  </div>
{% endblock %}
