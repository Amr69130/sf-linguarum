{% extends 'base.html.twig' %}

{% block title %}
  {{ language.name }}
{% endblock %}

{% block body %}
  <div class="p-8">
    <h1 class="text-3xl font-bold">{{ language.name }}</h1>
    <p class="text-gray-700 mt-4">{{ language.description }}</p>

    {% if language.parent %}
      <p class="mt-2 text-sm text-gray-500">Parent : {{ language.parent.name }}</p>
    {% endif %}
  </div>
{% endblock %}
